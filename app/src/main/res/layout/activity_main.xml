<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đăng Nhập Hệ Thống!"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_TK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tài Khoản" />

        <EditText
            android:id="@+id/editText_TK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Không được để trống" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_MK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mật khẩu:" />



        <EditText
            android:id="@+id/editText_MK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Không được để trống"
            android:inputType="textPassword" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox_Luu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu thông Tin" />

    <Button
        android:id="@+id/button_DN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập" />

    <Button
        android:id="@+id/button_thoat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thoát" />


</LinearLayout>

